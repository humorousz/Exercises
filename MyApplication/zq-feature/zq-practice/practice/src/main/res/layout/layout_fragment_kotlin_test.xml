<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/test_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Test"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/test_recycler_view"
    android:layout_width="108dp"
    android:layout_height="36dp"
    android:orientation="horizontal"
    app:layoutManager="com.humorusz.practice.kotlin.LoopLinearLayoutManager"
    app:layout_constrainedWidth="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <com.humorousz.uiutils.widget.GiftPriceView
    android:id="@+id/price_view"
    android:layout_width="72dp"
    android:layout_height="32dp"
    android:layout_marginTop="100dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/test_btn">
    <TextView
      android:id="@+id/item_start"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_alignParentStart="true"
      android:alpha="0.2"
      android:background="@drawable/input_send_bg"
      android:gravity="center"
      android:scaleX="0.5"
      android:scaleY="0.5"
      android:text="1" />

    <TextView
      android:id="@+id/item_center"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/input_send_bg"
      android:gravity="center"
      android:text="0" />

    <TextView
      android:id="@+id/item_end"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_alignParentEnd="true"
      android:alpha="0.2"
      android:background="@drawable/input_send_bg"
      android:gravity="center"
      android:scaleX="0.5"
      android:scaleY="0.5"
      android:text="2" />
  </com.humorousz.uiutils.widget.GiftPriceView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shader_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <com.humorous.myapplication.shader.widget.MaskLoadingView
            android:id="@+id/test_shader"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:repeatCount="-1"
            app:duration="1500"
            app:repeatMode="restart"
            app:animMode="left_right"
            android:background="#BFEBEBEB"/>

        <FrameLayout
            android:id="@+id/text_shader"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/shader_test_margin_top"
            android:background="@drawable/shader_loading_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_horizontal"
                android:text="牛逼闪闪会发光"/>
            <com.humorous.myapplication.shader.widget.MaskLoadingView
                android:id="@+id/text_mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:animMode="left_right"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/shader_test_margin_top">
            <ImageView
                android:id="@+id/shade_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
            <com.humorous.myapplication.shader.widget.MaskCircleView
                android:id="@+id/image_mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
        <com.humorous.myapplication.shader.widget.GradientImageView
            android:id="@+id/gradientImage"
            android:layout_marginTop="@dimen/shader_test_margin_top"
            android:layout_marginBottom="@dimen/shader_test_margin_top"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="70dp"/>

        <com.humorous.myapplication.shader.widget.PictureScrollView
            android:layout_marginTop="@dimen/shader_test_margin_top"
            android:layout_marginBottom="@dimen/shader_test_margin_top"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/sssssss"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
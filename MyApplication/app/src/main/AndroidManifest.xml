<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.humorous.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:name=".application.HumorousZApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_demo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.humorousz.home.container.ContainerActivity"
                  android:windowSoftInputMode="adjustNothing"
                  android:exported="false"
                  android:theme="@style/DIY.SlideClose.Transparent.Theme">
            <intent-filter >
                <action android:name="com.humorous.test"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="test"
                      android:host="humorous"/>
            </intent-filter>
        </activity>
        <activity android:name="com.humorousz.home.SecondMenuActivity"
                  android:theme="@style/DIY.SlideClose.Transparent.Theme"/>
    </application>

</manifest>